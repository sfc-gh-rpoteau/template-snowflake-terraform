{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "ListStatePath",
        "Effect": "Allow",
        "Action": "s3:ListBucket",
        "Resource": "arn:aws:s3:::TERRAFORM_STATE_BUCKET"
      },
      {
        "Sid": "ReadWriteStateObject",
        "Effect": "Allow",
        "Action": ["s3:GetObject", "s3:PutObject"],
        "Resource": "arn:aws:s3:::TERRAFORM_STATE_BUCKET/*"
      },
      {
        "Sid": "StateLockfile",
        "Effect": "Allow",
        "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
        "Resource": "arn:aws:s3:::TERRAFORM_STATE_BUCKET/*.tflock"
      }
      
    ]
  }
  